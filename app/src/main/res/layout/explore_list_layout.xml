<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_load"
        android:layout_width="0dp"
        android:layout_height="420dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/explore_dummie" />

    <TextView
        android:id="@+id/date_load"
        style="@style/Levis.buttonRed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dip"
        android:paddingRight="10dip"
        android:paddingTop="2dip"
        android:text="12/07/17"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tittle_load"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tittle_load"
        style="@style/Levis.buttonRed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dip"
        android:paddingRight="10dip"
        android:paddingTop="2dip"
        android:text="MyTittleDance"
        app:layout_constraintTop_toTopOf="@+id/image_load"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/image_load"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/owner_load"
        style="@style/Levis.buttonRed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="10dip"
        android:paddingRight="15dip"
        android:paddingTop="2dip"
        android:text="John Doe"
        app:layout_constraintBottom_toBottomOf="@+id/image_load"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_load"
        app:layout_constraintVertical_bias="0.9" />

    <TextView
        android:id="@+id/location_load"
        style="@style/Levis.buttonRed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="10dip"
        android:paddingRight="15dip"
        android:paddingTop="2dip"
        android:text="Cali, Co"
        app:layout_constraintBottom_toBottomOf="@+id/image_load"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owner_load"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>