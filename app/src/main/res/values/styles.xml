<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorLevis</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <!-- No TOP BAR -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <!-- textStyle -->
    <style name="Levis" parent="AppTheme">
        <item name="colorControlNormal">@color/colorLevis</item>
        <item name="colorControlActivated">@color/colorLevis</item>
        <item name="colorControlHighlight">@color/colorLevis</item>
        <item name="android:gravity" >center</item>
    </style>


    <!-- footer text-->
    <style name="Levis.terms" parent="Levis">
        <item name="android:textSize">8dp</item>
        <item name="android:textColor" >#ffffff</item>
        <item name="android:gravity" >center</item>
    </style>


    <!-- tittle text-->
    <style name="Levis.tittle" parent="Levis">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor" >#000000</item>
        <item name="android:gravity" >left</item>
    </style>

    <!-- RED Button -->
    <style name="Levis.buttonRed" parent="Levis">
        <item name="android:textColor" >#ffffff</item>
        <item name="android:background">@color/colorLevis</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- White Button -->
    <style name="Levis.buttonLight" parent="Levis">
        <item name="android:textColor" >@color/colorLevis</item>
        <item name="android:background">#70ffffff</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- back Button -->
    <style name="Levis.buttonBack" parent="Levis">
        <item name="android:textColor" >#ffffff</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15dp</item>
        <item name="android:drawableLeft">@drawable/back_black</item>
    </style>
</resources>
